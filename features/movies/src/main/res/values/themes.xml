<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:actionBarSize">56dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColorPrimary">@color/colorGrey</item>
        <item name="android:textColorHint">@color/colorGrey</item>
    </style>
    <style name="MoviesTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/cardview_dark_background</item>
    </style>
    <!--SearchViewStyle -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorPrimary">@color/colorGrey</item>
        <item name="android:textColorHint">@color/colorGrey</item>
    </style>
</resources>